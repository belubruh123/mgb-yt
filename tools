    <script>
        document.getElementById('entertainBtn').addEventListener('click', function() {
            toggleButtons('entertainHiddenButtons');
        });

        document.getElementById('toolsBtn').addEventListener('click', function() {
            toggleButtons('toolsHiddenButtons');
        });

        document.getElementById('emulatorBtn').addEventListener('click', function() {
            toggleButtons('emulatorHiddenButtons');
        });

        function toggleButtons(id) {
            var allHiddenButtons = document.querySelectorAll('.hidden-buttons');
            allHiddenButtons.forEach(function(buttons) {
                if (buttons.id !== id) {
                    buttons.classList.remove('show');
                }
            });
            var hiddenButtons = document.getElementById(id);
            if (hiddenButtons.classList.contains('show')) {
                hiddenButtons.classList.remove('show');
            } else {
                hiddenButtons.classList.add('show');
            }
        }

        function getRandomPosition(element) {
            var x = Math.floor(Math.random() * (window.innerWidth - element.clientWidth));
            var y = Math.floor(Math.random() * (window.innerHeight - element.clientHeight));
            return {x: x, y: y};
        }

        window.onload = function() {
            var images = [
                'https://lh3.googleusercontent.com/pw/AP1GczOJdLW0TbZ4V2fP6OVBpvNpBz2qac7LBWCUkmRbN9dGAVyOHLY50-z49oC7edIlrX7eq4G5UHpI4Tssr_H26lFyhHogrsKyvdG8zn4tmMYZ6MHeH9Wr2lEL9wuVKa8guJHVBL4lNeu7rfOdAMO_-HW4=w920-h1159-s-no-gm',
                'https://lh3.googleusercontent.com/pw/AP1GczNGtw5qxTTHkg1PLlHntuFdCCmKlYm6SnOTOipzDjQ4v7TX3tyC5z2NdZ_yIIPDMgUftuybkDZiyMQsFoX4ThKY9vg62m91V07TGcmPIcfJNJAwmy8th6eIkPnz08FS9EJd78R9CcP6V2blux0Jak4w=w1125-h1321-s-no-gm'
            ];
            var backgroundImage = document.getElementById('backgroundImage');
            for (var i = 0; i < 10; i++) {
                var img = document.createElement('img');
                img.src = images[i % images.length];
                var pos = getRandomPosition(img);
                img.style.left = pos.x + 'px';
                img.style.top = pos.y + 'px';
                backgroundImage.appendChild(img);
            }

            var taglines = [
                "Innovative Content!",
                "Latest Tech Reviews!",
                "Gaming Adventures!",
                "Coding Tutorials!",
                "Exciting Vlogs!",
                "Tech News Updates!",
                "Gaming Tips & Tricks!",
                "In-Depth Reviews!",
                "Learn with Fun!",
                "Epic Gameplays!"
            ];
            var randomTagline = taglines[Math.floor(Math.random() * taglines.length)];
            document.getElementById('tagline').innerText = randomTagline;

            // Define the site name
            var siteName = "https://www.mgb-yt.com";

            // Construct the full URLs for the links
            document.querySelector('#entertainHiddenButtons a[href="#"]').href = siteName + '/minecraft';
            document.querySelector('#entertainHiddenButtons a:nth-child(2)').href = siteName + '/tools/platformer';
            document.querySelector('#toolsHiddenButtons a[href="#"]').href = siteName + '/tools/nitro';
            document.querySelector('#toolsHiddenButtons a:nth-child(2)').href = siteName + '/tools/encode-decode';
            document.querySelector('#emulatorHiddenButtons a[href="#"]').href = 'https://windows96.net';
            document.querySelector('#emulatorHiddenButtons a:nth-child(2)').href = 'https://windows93.net';
            document.querySelector('#emulatorHiddenButtons a:nth-child(3)').href = 'https://win11.blueedge.me';
        };
    </script>
